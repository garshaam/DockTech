{
    "compilerOptions": {
        "outDir": "lib",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "target": "ES2020",
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "include": [
      "src",
      "vite.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "lib"
    ]
}
